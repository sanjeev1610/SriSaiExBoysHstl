<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
            app:hintEnabled="true"
            app:hintTextColor="@android:color/holo_green_light"
            app:boxStrokeColor="@color/colorPrimary"
            app:helperText="Enter in Number Format"
            app:helperTextEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_add_room_item_number"
                android:layout_width="match_parent"
                android:hint="Enter Room No"
                android:inputType="number"
                android:layout_height="wrap_content"/>


    </com.google.android.material.textfield.TextInputLayout>


<com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintEnabled="true"
        app:helperText="Enter like Single share"
        app:helperTextEnabled="true"
        app:hintTextColor="@android:color/holo_green_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_add_room_item_type"
            android:hint="Enter Room Type single|double|.."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintEnabled="true"
            app:helperText="Enter No of Beds"
            app:hintTextColor="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_add_room_item_beds"
            android:hint="Beds"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
            android:weightSum="1" android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:layout_weight="0.50" android:text="is Beds Available"
                android:textSize="20sp" android:padding="8dp" android:layout_margin="6dp"
                android:layout_width="0dp" android:layout_height="wrap_content"/>
        <Spinner android:layout_width="0dp"
                 android:layout_weight="0.50"
                 android:layout_height="wrap_content"
                 android:entries="@array/state"
                 android:layout_gravity="center_vertical"
                 android:textAlignment="center"
                 android:id="@+id/et_add_room_item_state"
        />

    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintEnabled="true"
            app:hintTextColor="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_add_room_item_floor_id"
                android:hint="Floor Number"
                android:enabled="false"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
</ScrollView>