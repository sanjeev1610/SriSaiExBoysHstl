<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                app:hintEnabled="true"
                app:hintTextColor="@android:color/holo_green_light"
                app:boxStrokeColor="@color/colorPrimary"
                app:helperText="Enter Full name"
                app:helperTextEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_update_user_item_name"
                    android:hint="Enter Your Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
                android:orientation="horizontal" android:weightSum="2"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="Enter Full name"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_father_name"
                        android:hint="Father"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="Enter 10 digit no"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_phone"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal" android:weightSum="3"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_roomno"
                        android:hint="Roomno"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="Enter home"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_village"
                        android:hint="village"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="Enter like gandhinagar"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_street"
                        android:hint="Street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal" android:weightSum="3"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="Enter like 3-70"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_houseno"
                        android:hint="houseno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="Enter like RGM"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_mandal"
                        android:hint="Mandal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="Enter like Hyderabad"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_district"
                        android:hint="District"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal" android:weightSum="2"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="like Telangana"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_state"
                        android:hint="State"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:helperText="Pincode"
                    app:helperTextEnabled="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_pincode"
                        android:hint="Pincode"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal" android:weightSum="4"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_joining"
                        android:hint="Joining Date"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <Button
                    android:id="@+id/add_update_user_item_join_picker"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:background="@drawable/ic_date_range_black_24dp"
                    android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@android:color/holo_green_light"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_update_user_item_closing_date"
                        android:hint="closing"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </com.google.android.material.textfield.TextInputLayout>
            <Button

                    android:id="@+id/add_update_user_item_closing_picker"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:background="@drawable/ic_date_range_black_24dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal" android:weightSum="1"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button

                    android:id="@+id/add_update_user_item_camera_imageurl"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:text="profilepic upload"
                    android:layout_height="wrap_content"/>
            <Button

                    android:id="@+id/add_update_user_item_camera_docurl"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:text="Document upload"
                    android:layout_height="wrap_content"/>



        </LinearLayout>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp"
                android:text="Update" android:background="@android:color/holo_green_light" android:textColor="@android:color/white"
                android:layout_gravity="center" android:id="@+id/update_user_update"
        />

    </LinearLayout>
</ScrollView>
